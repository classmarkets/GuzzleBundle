<div id="response_{{ index }}" class="tab-pane">
    <h5>Information bar</h5>
    <table>
        <tbody>
        <tr>
            <th>Code</th>
            <td>{{ response.statusCode }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ response.reasonPhrase }}</td>
        </tr>
        </tbody>
    </table>

    <h5>Headers</h5>
    <table>
        <tbody>
        {% for header,value in response.headers %}
            <tr>
                <th>{{ header }}</th>
                <td>
                    {{ value|join(', ') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% set response_id = random(1000000) %}
    {% set is_json_response = ('application/json' == (response.headers['content-type']|default('') ~ '')[0:16]) %}
    <h5>Content <a class="format-r-{{ response_id }}" data-target="#r-{{ response_id }}" href="#">Format</a></h5>
    <pre id='r-{{ response_id }}' class='{{ is_json_response ? 'json' }}'>{{ response.body }}</pre>
</div>
